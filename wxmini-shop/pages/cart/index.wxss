.info-meta {
	padding-right: 1em;
}

.weui-media-box__bd_in-appmsg {
	position: relative;
}

.weui-cell_active {
	background-color: #fff;
}

.cart-numtext {
	float:left;
}

.cart-count-box{
    margin-top: 15rpx;
    left: 285;
    bottom: 20rpx;
    width: 100%;
    height: 80rpx;
}
.cart-count-box text{
    display: inline-block;
    line-height: 75rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 50rpx;
    width: 55rpx;
    height: 100%;
    border: 1px solid transparent;
	border-radius: 4px;
	border-color: #ccc;
	box-sizing: border-box;
}
.cart-count-num{
	font-size: 50rpx;
    width: 80rpx;
    border: 0;
	box-sizing: border-box;
}